{% extends "base.html.twig" %}

{% block stylesheets %}
    <!-- Google fonts-->
    <link href="https://fonts.googleapis.com/css?family=Lora:400,700,400italic,700italic" rel="stylesheet" type="text/css" />
    <link href="https://fonts.googleapis.com/css?family=Open+Sans:300italic,400italic,600italic,700italic,800italic,400,300,600,700,800" rel="stylesheet" type="text/css" />
    <!-- Core theme CSS (includes Bootstrap)-->
    <link href="{{ asset('clean/css/styles.css') }}" rel="stylesheet" />
{% endblock %}

{% block head_javascripts %}
    <script src="https://use.fontawesome.com/releases/v6.3.0/js/all.js" crossorigin="anonymous"></script>
{% endblock %}

{% block body %}

    <!-- Navigation-->
        <!-- Navigation-->
        <nav class="navbar navbar-expand-lg navbar-light" id="mainNav">
            <div class="container px-4 px-lg-5">

                <div class="collapse navbar-collapse" id="navbarResponsive">
                    <ul class="navbar-nav ms-auto py-4 py-lg-0">
                        <li class="nav-item">
                                <a class="nav-link px-lg-3 py-3 py-lg-4" href="{{ path('app_home') }}">Accueil</a>
                            </li>
                        {% if not is_granted("ROLE_USER") %}
                            <li class="nav-item">
                                <a class="nav-link px-lg-3 py-3 py-lg-4" href="{{ path('app_register') }}">S'inscrire</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link px-lg-3 py-3 py-lg-4" href="{{ path('app_login') }}">Connexion</a>
                            </li>
                        {% else %}
                            <li class="nav-item">
                                <a class="nav-link px-lg-3 py-3 py-lg-4" href="{{ path('author_add') }}">Créer un auteur</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link px-lg-3 py-3 py-lg-4" href="{{ path('book_add') }}">Créer un livre</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link px-lg-3 py-3 py-lg-4" href="{{ path('app_logout') }}">Déconnexion</a>
                            </li>
                        {% endif %}
                        
                    </ul>
                </div>
            </div>
        </nav>

    <!-- Page Header-->
    <header class="masthead" style="background-image: url('{% block headerBackground %}{{ asset('clean/assets/img/home-bg.jpg') }}{% endblock %}')">
        <div class="container position-relative px-4 px-lg-5">
            <div class="row gx-4 gx-lg-5 justify-content-center">
                <div class="col-md-10 col-lg-8 col-xl-7">
                    {% for message in app.flashes('success') %}
                        <div class="alert alert-success" role="alert">{{ message }}</div>
                    {% endfor %}
                    <div class="site-heading">
                        <h1>{% block headerTitle %}Clean Blog{% endblock %}</h1>
                        <span class="subheading">{% block headerSubheading %}A Blog Theme by Start Bootstrap{% endblock %}</span>
                    </div>
                </div>
            </div>
        </div>
    </header>
    
    {% block content %}{% endblock %}



{% endblock %}

